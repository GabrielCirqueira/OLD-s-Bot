{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@handlers/*": ["handlers/*"],
      "@scheduler/*": ["scheduler/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
